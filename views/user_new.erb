<h2>Create new account</h2>
<% if @user && !@user.valid? %>
  <div class="error">
    The following errors occurred:
    <ul>
      <% @user.errors.messages.each_pair do |field, messages| %>
        <% messages.each do |message| %>
          <li><%= "#{field} #{message}" %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
<form action="/users" method="post">
  <input name="username" value="<%= @user ? @user.username : "" %>" type="text" placeholder="Username">
  <input name="email" value="<%= @user ? @user.email : "" %>" type="text" placeholder="Email">
  <input name="password" type="password" placeholder="Password">
  <button>Sign up</button>
</form>
