<div class="actions">
  <a href="/posts/<%= @post.id %>/edit">Edit</a>
</div>

<div>
  Posted by <%= @post.user.username %> on
  <%= @post.date_posted.strftime("%b %-d %Y") %>
</div>
<h2><%= @post.title %></h2>
<p>
  <%= @post.content %>
</p>
<div class="post-stats">
  <span><%= @post.view_count %> views</span>
</div>
